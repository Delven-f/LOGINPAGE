<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Growtopia - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
      /* Border animasi merah */
      .red-animate-border {
        border-width: 8px !important;
        border-style: solid;
        border-radius: 0.75rem;
        border-image: linear-gradient(120deg, #ff4d4d, #c91818, #ff7272, #c91818, #ff4d4d) 1;
        animation: red-border-move 4s linear infinite;
      }
      @keyframes red-border-move {
        0% {
          border-image: linear-gradient(120deg, #ff4d4d, #c91818, #ff7272, #c91818, #ff4d4d) 1;
        }
        100% {
          border-image: linear-gradient(420deg, #ff4d4d, #c91818, #ff7272, #c91818, #ff4d4d) 1;
        }
      }
      /* Tambahan untuk kerapihan UI */
      .login-title {
        font-size: 2rem;
        font-weight: bold;
        color: #c91818;
        margin-bottom: 1rem;
        text-align: center;
        letter-spacing: 1px;
      }
      .login-label {
        color: #c91818;
        font-weight: 500;
        margin-bottom: 0.25rem;
      }
      .form-input {
        color: #c91818 !important;
        background: transparent !important;
        border: none !important;
        outline: none !important;
        font-size: 1rem;
        padding-left: 0.5rem;
      }
      .main-btn {
        background: #c91818;
        color: #fff;
        font-weight: 600;
        padding: 0.5rem 1.2rem;
        border-radius: 0.5rem;
        transition: background 0.2s, transform 0.2s;
      }
      .main-btn:hover {
        background: #ff4d4d;
        transform: scale(1.04);
      }
      .register-btn {
        background: #ff7272;
        color: #fff;
        font-weight: 600;
        padding: 0.5rem 1.2rem;
        border-radius: 0.5rem;
        transition: background 0.2s, transform 0.2s;
      }
      .register-btn:hover {
        background: #c91818;
        transform: scale(1.04);
      }
      .input-container {
        border: 2px solid #ff7272 !important;
        border-radius: 0.5rem;
        background: #fff;
        padding: 0.3rem 0.7rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
      }
      .error-message {
        background: #ffe6e6;
        color: #c91818;
        border-radius: 0.5rem;
        padding: 0.3rem 0.7rem;
        font-size: 0.85rem;
        margin-bottom: 0.7rem;
        text-align: center;
      }
    </style>
</head>
<body class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-b from-[#ff7272] to-[#c91818]">
    <div class="fixed inset-0 flex items-center justify-center">
        <div class="relative shadow-lg w-80 max-w-full px-4 py-6 red-animate-border">
            <div class="login-title">GTPS SERVER</div>
            <div id="errorDiv" class="hidden error-message">
                <span id="errorMessage"></span>
            </div>
            <form 
                method="post"
                action="/player/growid/login/validate"
                accept-charset="UTF-8"
                id="loginForm" class="mt-2">
                <div>
                    <label for="loginGrowId" class="login-label">GrowID</label>
                    <div class="input-container">
                        <i class="fas fa-user mr-2 text-[#c91818]"></i>
                        <input type="text" name="growId" id="loginGrowId" 
                            class="form-input flex-1"
                            placeholder="Enter your growid">
                    </div>
                </div>
                <div>
                    <label for="loginPassword" class="login-label">Password</label>
                    <div class="input-container">
                        <i class="fas fa-lock mr-2 text-[#c91818]"></i>
                        <input type="password" name="password" id="loginPassword" 
                            class="form-input flex-1"
                            placeholder="Enter your password">
                        <button type="button" id="toggleLogPassword" class="ml-2 text-[#c91818] bg-transparent border-none">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>
                <div class="flex justify-between items-center mt-4">
                    <button id="loginButton" type="submit" class="main-btn">
                        Login
                    </button>
                    <a href="/register">
                        <button type="button" class="register-btn">
                            Register
                        </button>
                    </a>
                </div>
            </form>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Auto-fill GrowID from localStorage
            if (localStorage.getItem('growId')) {
                document.getElementById('loginGrowId').value = localStorage.getItem('growId');
            }
        });

        // Event listener for login button
        document.getElementById('loginButton').addEventListener('click', function (event) {
            event.preventDefault();

            const loginForm = document.getElementById('loginForm');
            const uName = document.getElementById('loginGrowId').value;
            const uPass = document.getElementById('loginPassword').value;

            if (!uName || !uPass) {
                document.getElementById('errorDiv').classList.remove('hidden');
                document.getElementById('errorMessage').innerText = 'Username or Password is empty';
                return;
            } else if (uName.length < 4 || uPass.length < 4) {
                document.getElementById('errorDiv').classList.remove('hidden');
                document.getElementById('errorMessage').innerText = 'Username or Password must be at least 4 characters long';
                return;
            } else {
                document.getElementById('errorDiv').classList.add('hidden');
                loginForm.submit();
                localStorage.setItem('growId', uName); // Save GrowID to localStorage
            }
        });

        // Toggle visibility of the password field
        document.getElementById('toggleLogPassword').addEventListener('click', function () {
            const LpasswordField = document.getElementById('loginPassword');
            const LpasswordFieldType = LpasswordField.getAttribute('type');
            if (LpasswordFieldType === 'password') {
                LpasswordField.setAttribute('type', 'text');
                this.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                LpasswordField.setAttribute('type', 'password');
                this.innerHTML = '<i class="fas fa-eye"></i>';
            }
        });
    </script>
</body>
</html>
