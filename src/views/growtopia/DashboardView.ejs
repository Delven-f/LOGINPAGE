<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GTPS SERVER - Farming Theme</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
 <style>
  body {
    min-height: 100vh;
    background: transparent
    font-family: 'Montserrat', Arial, sans-serif;
    margin: 0;
    color: #a65c00;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow-x: hidden;
    animation: fadeIn 1s;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to   { opacity: 1; }
  }

  .dashboard-wrap {
    background: rgba(255,250,243,0.93);
    border-radius: 2rem;
    box-shadow: 0 8px 36px 0 rgba(255, 136, 0, 0.18);
    max-width: 95vw;
    margin: 2rem;
    width: 27rem;
    border: 3px solid #ffb347;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(6px);
    transition: box-shadow 0.3s;
    animation: popIn 0.7s;
  }
  @keyframes popIn {
    0% { transform: scale(0.98); opacity: 0.7;}
    100% { transform: scale(1); opacity: 1;}
  }

  .farm-illustration {
    width: 100%;
    height: 120px;
    background: linear-gradient(to top, #ffe5b4 70%, #fff0 100%);
    display: flex;
    align-items: end;
    justify-content: center;
    position: relative;
    gap: 1.2rem;
    animation: iconBounce 1.4s infinite alternate;
  }
  .farm-illustration i {
    color: #ff8800;
    font-size: 2.6rem;
    margin: 0 0.8rem;
    transition: transform 0.3s;
  }
  .farm-illustration i:hover {
    transform: scale(1.12) rotate(-7deg);
    color: #ffb347;
  }
  @keyframes iconBounce {
    0% { transform: translateY(0);}
    100% { transform: translateY(-7px);}
  }

  .glass-content {
    border-radius: 2rem;
    background: rgba(255,250,243,0.96);
    padding: 2.3rem 1.8rem 1.7rem 1.8rem;
    box-shadow: 0 2px 16px 0 rgba(255, 136, 0, 0.09);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .header-title {
    font-size: 2.1rem;
    font-weight: 800;
    letter-spacing: 0.04em;
    color: #a65c00;
    margin-bottom: 1.9rem;
    text-align: center;
    text-shadow: 0 3px 8px #ffe5b4a2;
    transition: color 0.2s;
  }

  .input-label {
    color: #b8741a;
    font-size: 1.06rem;
    margin-bottom: 0.3rem;
    display: block;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .input-box {
    background: #fffaf3 !important;
    border: 1.5px solid #ffb347 !important;
    border-radius: 1.1rem !important;
    color: #a65c00 !important;
    font-size: 1rem;
    padding-left: 1rem;
    padding-right: 0.6rem;
    min-height: 2.5rem;
    margin-bottom: 1.1rem;
    display: flex;
    align-items: center;
    box-shadow: 0 1px 8px 0 #ffb3471a;
    transition: box-shadow 0.2s, border 0.2s;
  }
  .input-box:focus-within {
    border: 1.5px solid #ff8800 !important;
    box-shadow: 0 2px 12px 0 #ff880025;
  }

  .input-box input {
    background: transparent;
    border: none;
    color: #a65c00 !important;
    width: 100%;
    font-size: 1.05rem;
    outline: none;
    transition: color 0.2s;
  }
  .input-box input::placeholder {
    color: #ffb347;
    opacity: 1;
    font-size: .97rem;
    font-style: italic;
  }
  .form-icon {
    color: #ffb347;
    margin-right: 0.7rem;
    font-size: 1.18rem;
    transition: color 0.2s, transform 0.2s;
  }
  .input-box:focus-within .form-icon {
    color: #ff8800;
    transform: scale(1.13);
  }

  .btn-main, .btn-alt {
    background: linear-gradient(90deg, #ffb347 65%, #ff8800 100%);
    color: #fffaf3;
    border-radius: 1.15rem;
    border: none;
    font-size: 1.13rem;
    font-weight: bold;
    padding: 0.78rem 2.2rem;
    margin-right: 0.5rem;
    margin-top: 0.2rem;
    box-shadow: 0 2px 12px 0 #ffb3474d;
    transition: background 0.2s, color 0.2s, transform 0.15s;
    cursor: pointer;
    letter-spacing: 0.01em;
  }
  .btn-main:hover, .btn-alt:hover {
    background: linear-gradient(90deg, #ff8800 60%, #ffb347 100%);
    color: #a65c00;
    transform: scale(1.03);
    border: 1px solid #ffb347;
  }

  .error-message {
    background: #fff0e5f2;
    color: #d90429;
    border-radius: 0.8rem;
    padding: 0.6rem 1.3rem;
    font-size: 1.04rem;
    text-align: center;
    margin-bottom: 1.2rem;
    font-weight: bold;
    letter-spacing: 0.01em;
    box-shadow: 0 2px 10px 0 #d9042915;
    animation: shake 0.28s;
  }
  @keyframes shake {
    0%, 100% { transform: translateX(0);}
    20%, 60% { transform: translateX(-7px);}
    40%, 80% { transform: translateX(7px);}
  }

  .credit-bar {
    margin-top: 2.2rem;
    color: #b8741a;
    font-size: 1.03rem;
    font-weight: 600;
    opacity: 0.88;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    user-select: none;
    letter-spacing: 0.01em;
    transition: color 0.2s;
  }
  .credit-bar .fa-seedling {
    color: #ffb347;
    font-size: 1.25em;
    margin-right: 0.16em;
    animation: plantGrow 1.8s alternate infinite;
  }
  @keyframes plantGrow {
    0% { transform: scale(1);}
    100% { transform: scale(1.13);}
  }

  @media (max-width: 600px) {
    .dashboard-wrap, .glass-content { width: 99vw !important; border-radius: 1.1rem !important; }
    .glass-content { padding: 1.1rem !important; }
    .btn-main, .btn-alt { font-size: 1rem !important; padding: 0.7rem 1.1rem !important; }
    .input-box { font-size: 0.97rem; min-height: 2.1rem; }
    .header-title { font-size: 1.25rem;}
  }
</style>
</head>
<body>
  <div class="dashboard-wrap">
    <div class="farm-illustration">
      <i class="fas fa-tractor"></i>
      <i class="fas fa-seedling"></i>
      <i class="fas fa-carrot"></i>
    </div>
    <div class="glass-content">
      <p class="header-title"><i class="fas fa-seedling"></i> GTPS FARM SERVER</p>
      <div id="errorDiv" class="hidden error-message">
        <span id="errorMessage"></span>
      </div>
      <form 
        method="post"
        action="/player/growid/login/validate"
        accept-charset="UTF-8"
        id="loginForm" style="width:100%;">
        <div style="margin-bottom:1.2rem;">
          <label for="loginGrowId" class="input-label">GrowID</label>
          <div class="input-box">
            <i class="fas fa-user form-icon"></i>
            <input type="text" name="growId" id="loginGrowId" 
              placeholder="Enter your growid">
          </div>
        </div>
        <div style="margin-bottom:1.4rem;">
          <label for="loginPassword" class="input-label">Password</label>
          <div class="input-box">
            <i class="fas fa-lock form-icon"></i>
            <input type="password" name="password" id="loginPassword"
              placeholder="Enter your password">
            <button type="button" id="toggleLogPassword" style="margin-left:0.7rem;background:transparent;border:none;cursor:pointer;">
              <i class="fas fa-eye" style="color:#7ed957"></i>
            </button>
          </div>
        </div>
        <div style="display:flex;justify-content:space-between;align-items:center;margin-top:1.6rem;">
          <button id="loginButton" type="submit" class="btn-main">
            Login
          </button>
          <a href="/register">
            <button type="button" class="btn-alt">
              Register
            </button>
          </a>
        </div>
      </form>
      <!-- Credit Logo/Bar -->
      <div class="credit-bar">
        <i class="fas fa-seedling"></i> 
        <span>Growtopia Private Server - Farming!</span>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (localStorage.getItem('growId')) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId');
      }
    });

    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const loginForm = document.getElementById('loginForm');
      const uName = document.getElementById('loginGrowId').value;
      const uPass = document.getElementById('loginPassword').value;
      if (!uName || !uPass) {
        document.getElementById('errorDiv').classList.remove('hidden');
        document.getElementById('errorMessage').innerText = 'Username or Password is empty';
        return;
      } else if (uName.length < 4 || uPass.length < 4) {
        document.getElementById('errorDiv').classList.remove('hidden');
        document.getElementById('errorMessage').innerText = 'Username or Password must be at least 4 characters long';
        return;
      } else {
        loginForm.submit();
        localStorage.setItem('growId', uName);
      }
    });

    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const LpasswordField = document.getElementById('loginPassword');
      const LpasswordFieldType = LpasswordField.getAttribute('type');
      if (LpasswordFieldType === 'password') {
        LpasswordField.setAttribute('type', 'text');
        this.innerHTML = '<i class="fas fa-eye-slash" style="color:#7ed957"></i>';
      } else {
        LpasswordField.setAttribute('type', 'password');
        this.innerHTML = '<i class="fas fa-eye" style="color:#7ed957"></i>';
      }
    });
  </script>
</body>
</html>
