<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GTPS SERVER - Simple Login</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      background: transparent
      color: #f8f8f8;
      font-family: Arial, sans-serif;
      min-height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .container {
      background: #273347;
      border-radius: 10px;
      box-shadow: 0 2px 20px #0002;
      padding: 2rem 1.5rem 1.5rem 1.5rem;
      width: 100%;
      max-width: 350px;
    }
    .container h2 {
      text-align: center;
      margin-bottom: 1.5rem;
      font-size: 1.4rem;
      font-weight: 700;
      letter-spacing: 1px;
    }
    .form-group {
      margin-bottom: 1rem;
    }
    .form-group label {
      font-size: 0.99rem;
      color: #8fcaff;
      display: block;
      margin-bottom: 0.25rem;
    }
    .form-group input {
      width: 100%;
      padding: 0.6rem 0.8rem;
      border-radius: 6px;
      border: 1px solid #3d4a5d;
      background: #2d3b4f;
      color: #f8f8f8;
      font-size: 1rem;
      outline: none;
      box-sizing: border-box;
      margin-bottom: 0.1rem;
    }
    .form-group input:focus {
      border: 1.5px solid #00eaff;
      background: #22304a;
    }
    .toggle-password {
      background: none;
      border: none;
      color: #8fcaff;
      font-size: 1.1em;
      cursor: pointer;
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
    }
    .input-password-wrapper {
      position: relative;
      display: flex;
      align-items: center;
    }
    .error-message {
      background: #ff287b22;
      color: #ff286b;
      font-size: 0.97rem;
      border-radius: 5px;
      padding: 0.4rem 0.7rem;
      margin-bottom: 1rem;
      display: none;
      text-align: center;
    }
    .error-message.show {
      display: block;
    }
    .actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 1.3rem;
      gap: 0.7rem;
    }
    .actions a, .actions button {
      flex: 1;
      text-align: center;
      text-decoration: none;
    }
    .btn {
      background: #00eaff;
      color: #222e3a;
      border: none;
      border-radius: 6px;
      padding: 0.7rem 0;
      font-size: 1rem;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.18s, color 0.18s;
    }
    .btn:hover {
      background: #00cbe7;
    }
    .btn-alt {
      background: #3d4a5d;
      color: #8fcaff;
      margin-right: 0.5rem;
    }
    .btn-alt:hover {
      background: #273347;
      color: #00eaff;
    }
    .credit {
      margin-top: 1.5rem;
      text-align: center;
      color: #8fcaff;
      font-size: 0.97rem;
      opacity: 0.9;
    }
    @media (max-width: 480px) {
      .container { padding: 1rem 0.5rem; width: 99vw;}
      .actions { flex-direction: column; gap:0.6rem;}
      .btn, .btn-alt { width: 100%; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>GTPS SERVER</h2>
    <div id="errorDiv" class="error-message">
      <span id="errorMessage"></span>
    </div>
    <form method="post" action="/player/growid/login/validate" id="loginForm" autocomplete="off">
      <div class="form-group">
        <label for="loginGrowId">GrowID</label>
        <input type="text" name="growId" id="loginGrowId" placeholder="Enter your GrowID">
      </div>
      <div class="form-group">
        <label for="loginPassword">Password</label>
        <div class="input-password-wrapper">
          <input type="password" name="password" id="loginPassword" placeholder="Enter your password">
          <button type="button" id="toggleLogPassword" class="toggle-password" aria-label="Show/Hide Password">
            <i class="fas fa-eye"></i>
          </button>
        </div>
      </div>
      <div class="actions">
        <a href="/register"><button type="button" class="btn btn-alt">Register</button></a>
        <button id="loginButton" type="submit" class="btn">Login</button>
      </div>
    </form>
    <div class="credit">
      Growtopia Private Server
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (localStorage.getItem('growId')) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId');
      }
    });

    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const loginForm = document.getElementById('loginForm');
      const uName = document.getElementById('loginGrowId').value;
      const uPass = document.getElementById('loginPassword').value;
      const errorDiv = document.getElementById('errorDiv');
      const errorMessage = document.getElementById('errorMessage');
      if (!uName || !uPass) {
        errorDiv.classList.add('show');
        errorMessage.innerText = 'Username or Password is empty';
        return;
      } else if (uName.length < 4 || uPass.length < 4) {
        errorDiv.classList.add('show');
        errorMessage.innerText = 'Username or Password must be at least 3 characters long';
        return;
      } else {
        errorDiv.classList.remove('show');
        loginForm.submit();
        localStorage.setItem('growId', uName);
      }
    });

    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const LpasswordField = document.getElementById('loginPassword');
      const icon = this.querySelector('i');
      if (LpasswordField.getAttribute('type') === 'password') {
        LpasswordField.setAttribute('type', 'text');
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
      } else {
        LpasswordField.setAttribute('type', 'password');
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
      }
    });
  </script>
</body>
</html>
