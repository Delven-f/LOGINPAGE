<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GTPS SERVER - DELVINE X</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      margin: 0;
      background: transparent;
      font-family: 'Montserrat', Arial, sans-serif;
      color: #e0e3fb;
      display: flex;
      align-items: center;
      justify-content: center;
      letter-spacing: 0.01em;
    }
    .dashboard-wrap {
      position: relative;
      background: rgba(20,22,34,0.97);
      border-radius: 1.3rem;
      max-width: 100vw;
      margin: 2rem;
      width: 20rem;    /* 2x dari sebelumnya */
      height: 20rem;   /* 2x dari sebelumnya */
      overflow: hidden;
      box-shadow: 0 0 32px 0 #00eaff44, 0 0 2px #fff;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    .dashboard-wrap::before {
      content: '';
      pointer-events: none;
      position: absolute;
      z-index: 1;
      inset: 0;
      border-radius: 1.3rem;
      padding: 3px;
      background: linear-gradient(120deg, #00eaff, #8f00ff, #2cb5e8, #202a45, #00eaff 90%);
      background-size: 300% 300%;
      animation: neonBorder 7s linear infinite;
      -webkit-mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
    }
    @keyframes neonBorder {
      0% {background-position: 0% 50%;}
      100% {background-position: 100% 50%;}
    }
    .tech-illustration {
      z-index: 2;
      position: relative;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(90deg, #141a24 40%, #202a45 100%);
      padding-top: 4rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid #232944;
    }
    .tech-icons {
      display: flex;
      gap: 2.4rem;
      font-size: 4.8rem;
    }
    .tech-icons i {
      color: #00eaff;
      filter: drop-shadow(0 0 8px #00eaff);
      transition: color 0.3s, filter 0.3s;
    }
    .tech-icons i:nth-child(2) { color: #8f00ff; filter: drop-shadow(0 0 8px #8f00ff);}
    .tech-icons i:nth-child(3) { color: #2cb5e8; filter: drop-shadow(0 0 8px #2cb5e8);}
    .glass-content {
      z-index: 2;
      position: relative;
      background: rgba(24,28,46,0.93);
      border-radius: 1.1rem;
      padding: 3rem 2.2rem 2rem 2.2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      box-shadow: 0 2px 18px 0 #00eaff13;
    }
    .header-title {
      font-size: 2.8rem;
      font-weight: 800;
      letter-spacing: 0.06em;
      color: #e0e3fb;
      margin-bottom: 2rem;
      text-align: center;
      display: flex;
      align-items: center;
      gap: 1.2rem;
      text-shadow: 0 1px 10px #00eaff59;
    }
    .input-label {
      color: #2cb5e8;
      font-size: 1.3rem;
      margin-bottom: 0.4rem;
      display: block;
      font-weight: 600;
      letter-spacing: 0.01em;
    }
    .input-box {
      background: rgba(34,42,71,0.75);
      border: 2px solid #00eaff;
      border-radius: 0.8rem;
      color: #e0e3fb;
      font-size: 1.2rem;
      padding-left: 1.2rem;
      padding-right: 0.8rem;
      min-height: 3.1rem;
      margin-bottom: 1.2rem;
      display: flex;
      align-items: center;
      box-shadow: 0 1px 10px 0 #00eaff22;
      transition: box-shadow 0.2s, border 0.2s;
    }
    .input-box:focus-within {
      border: 2px solid #8f00ff;
      box-shadow: 0 2px 12px 0 #8f00ff42;
    }
    .input-box input {
      background: transparent;
      border: none;
      color: #e0e3fb;
      width: 100%;
      font-size: 1.25rem;
      outline: none;
      letter-spacing: 0.01em;
    }
    .input-box input::placeholder {
      color: #38cfff99;
      opacity: 1;
      font-size: 1.1rem;
      font-style: italic;
    }
    .form-icon {
      color: #00eaff;
      margin-right: 1rem;
      font-size: 1.5rem;
      transition: color 0.2s, transform 0.2s;
    }
    .input-box:focus-within .form-icon {
      color: #8f00ff;
      transform: scale(1.13);
    }
    .toggle-password {
      margin-left:1rem;
      background:transparent;
      border:none;
      cursor:pointer;
      outline: none;
      display: flex;
      align-items: center;
    }
    .toggle-password i {
      color: #38cfff;
      font-size: 1.4rem;
      transition: color 0.2s;
    }
    .btn-main, .btn-alt {
      background: linear-gradient(90deg, #00eaff 40%, #8f00ff 100%);
      color: #fff;
      border-radius: 1rem;
      border: none;
      font-size: 1.3rem;
      font-weight: bold;
      padding: 1rem 2.7rem;
      margin-right: 1rem;
      margin-top: 0.4rem;
      box-shadow: 0 2px 14px 0 #00eaff47;
      transition: background 0.2s, color 0.2s, transform 0.12s;
      cursor: pointer;
      letter-spacing: 0.01em;
      outline: none;
    }
    .btn-main:hover, .btn-alt:hover {
      background: linear-gradient(90deg, #8f00ff 45%, #00eaff 100%);
      color: #38cfff;
      transform: scale(1.025);
      border: 1px solid #00eaff;
    }
    .error-message {
      display: none;
      background: #341c4e99;
      color: #ff287b;
      border-radius: 0.6rem;
      padding: 0.7rem 1.2rem;
      font-size: 1.1rem;
      text-align: center;
      margin-bottom: 1.3rem;
      font-weight: bold;
      letter-spacing: 0.01em;
      box-shadow: 0 2px 10px 0 #8f00ff15;
    }
    .error-message.show {
      display: block;
    }
    .credit-bar {
      margin-top: 2.2rem;
      color: #38cfff;
      font-size: 1.25rem;
      font-weight: 600;
      opacity: 0.92;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      user-select: none;
      letter-spacing: 0.01em;
      transition: color 0.2s;
      text-shadow: 0 1px 8px #00eaff33;
    }
    .credit-bar .fa-code {
      color: #8f00ff;
      font-size: 1.3em;
      margin-right: 0.16em;
    }
    .delvinx-credit {
      width: 100%;
      margin: 0 auto 2px auto;
      text-align: center;
      font-size: 4px;
      font-weight: bold;
      color: #00eaff;
      letter-spacing: 2px;
      font-family: 'Montserrat', Arial, sans-serif;
      opacity: 0.92;
      z-index: 999;
      text-shadow: 0 1px 6px #00eaff,0 0px 1px #8f00ff;
    }
    @media (max-width: 600px) {
      .dashboard-wrap, .glass-content { width: 99vw !important; border-radius: 1rem !important; }
      .glass-content { padding: 1rem !important; }
      .btn-main, .btn-alt { font-size: 1rem !important; padding: 0.7rem 1.1rem !important; }
      .input-box { font-size: 0.97rem; min-height: 2rem; }
      .header-title { font-size: 1.18rem;}
      .tech-icons { font-size: 2.4rem; gap: 1.2rem;}
    }
  </style>
</head>
<body>
  <div class="dashboard-wrap">
    <div class="tech-illustration">
      <div class="tech-icons">
        <i class="fas fa-microchip"></i>
        <i class="fas fa-robot"></i>
        <i class="fas fa-bolt"></i>
      </div>
    </div>
    <div class="glass-content">
      <p class="header-title"><i class="fas fa-microchip"></i> GTPS SERVER</p>
      <div id="errorDiv" class="error-message">
        <span id="errorMessage"></span>
      </div>
      <form 
        method="post"
        action="/player/growid/login/validate"
        accept-charset="UTF-8"
        id="loginForm" style="width:100%;">
        <div style="margin-bottom:1.2rem;">
          <label for="loginGrowId" class="input-label">GrowID</label>
          <div class="input-box">
            <i class="fas fa-user form-icon"></i>
            <input type="text" name="growId" id="loginGrowId" 
              placeholder="Enter your growid">
          </div>
        </div>
        <div style="margin-bottom:1.4rem;">
          <label for="loginPassword" class="input-label">Password</label>
          <div class="input-box">
            <i class="fas fa-lock form-icon"></i>
            <input type="password" name="password" id="loginPassword"
              placeholder="Enter your password">
            <button type="button" id="toggleLogPassword" class="toggle-password" aria-label="Show/Hide Password">
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>
        <div style="display:flex;justify-content:space-between;align-items:center;margin-top:1.6rem;">
          <button id="loginButton" type="submit" class="btn-main">
            Login
          </button>
          <a href="/register">
            <button type="button" class="btn-alt">
              Register
            </button>
          </a>
        </div>
      </form>
      <div class="credit-bar">
        <i class="fas fa-code"></i> 
        <span>Growtopia Private Server - Futuristic Tech!</span>
      </div>
    </div>
  </div>
  <div class="delvinx-credit">DelvinX</div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (localStorage.getItem('growId')) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId');
      }
    });

    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const loginForm = document.getElementById('loginForm');
      const uName = document.getElementById('loginGrowId').value;
      const uPass = document.getElementById('loginPassword').value;
      const errorDiv = document.getElementById('errorDiv');
      const errorMessage = document.getElementById('errorMessage');
      if (!uName || !uPass) {
        errorDiv.classList.add('show');
        errorMessage.innerText = 'Username or Password is empty';
        return;
      } else if (uName.length < 4 || uPass.length < 4) {
        errorDiv.classList.add('show');
        errorMessage.innerText = 'Username or Password must be at least 4 characters long';
        return;
      } else {
        errorDiv.classList.remove('show');
        loginForm.submit();
        localStorage.setItem('growId', uName);
      }
    });

    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const LpasswordField = document.getElementById('loginPassword');
      const icon = this.querySelector('i');
      if (LpasswordField.getAttribute('type') === 'password') {
        LpasswordField.setAttribute('type', 'text');
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
      } else {
        LpasswordField.setAttribute('type', 'password');
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
      }
    });
  </script>
</body>
</html>
