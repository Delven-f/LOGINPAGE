<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GTPS SERVER - Farming Theme</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(to bottom, #d2f7c5 0%, #a1e887 100%);
      font-family: 'Montserrat', Arial, sans-serif;
      margin: 0;
      color: #295729;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .dashboard-wrap {
      background: rgba(255,255,255,0.95);
      border-radius: 1.5rem;
      box-shadow: 0 8px 36px 0 rgba(60,130,60,0.17);
      max-width: 95vw;
      margin: 2rem;
      width: 25rem;
      border: 3px solid #7ed957;
      position: relative;
      overflow: hidden;
    }
    .farm-illustration {
      width: 100%;
      height: 120px;
      background: linear-gradient(to top, #b8e994 60%, #fff0 100%);
      display: flex;
      align-items: end;
      justify-content: center;
      position: relative;
    }
    .farm-illustration i {
      color: #7ed957;
      font-size: 2.4rem;
      margin: 0 0.6rem;
    }
    .glass-content {
      border-radius: 1.5rem;
      background: rgba(255,255,255,0.90);
      padding: 2.2rem 1.5rem 1.5rem 1.5rem;
      box-shadow: 0 2px 16px 0 rgba(60, 130, 60, 0.11);
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .header-title {
      font-size: 2rem;
      font-weight: 800;
      letter-spacing: 0.04em;
      color: #295729;
      margin-bottom: 1.5rem;
      text-align: center;
    }
    .input-label {
      color: #6a994e;
      font-size: 1rem;
      margin-bottom: 0.3rem;
      display: block;
      font-weight: 600;
    }
    .input-box {
      background: #e9fbe5 !important;
      border: 1.5px solid #b5e48c !important;
      border-radius: 0.8rem !important;
      color: #295729 !important;
      font-size: 1rem;
      padding-left: 0.9rem;
      padding-right: 0.5rem;
      min-height: 2.3rem;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
    }
    .input-box input {
      background: transparent;
      border: none;
      color: #295729 !important;
      width: 100%;
      font-size: 1rem;
      outline: none;
    }
    .input-box input::placeholder {
      color: #a5be8c;
      opacity: 1;
      font-size: .97rem;
    }
    .form-icon {
      color: #7ed957;
      margin-right: 0.7rem;
      font-size: 1.12rem;
      transition: color 0.2s;
    }
    .btn-main, .btn-alt {
      background: #7ed957;
      color: #295729;
      border-radius: 1rem;
      border: none;
      font-size: 1.1rem;
      font-weight: bold;
      padding: 0.7rem 2rem;
      margin-right: 0.5rem;
      margin-top: 0.2rem;
      transition: background 0.2s, color 0.2s;
      cursor: pointer;
    }
    .btn-main:hover, .btn-alt:hover {
      background: #295729;
      color: #fff;
      border: 1px solid #7ed957;
    }
    .error-message {
      background: #fff1;
      color: #d90429;
      border-radius: 0.6rem;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      text-align: center;
      margin-bottom: 1.1rem;
      font-weight: bold;
      letter-spacing: 0.01em;
    }
    .credit-bar {
      margin-top: 2rem;
      color: #6a994e;
      font-size: 1rem;
      font-weight: 600;
      opacity: 0.85;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      user-select: none;
    }
    .credit-bar .fa-seedling {
      color: #7ed957;
      font-size: 1.2em;
      margin-right: 0.18em;
    }
    @media (max-width: 600px) {
      .dashboard-wrap, .glass-content { width: 99vw !important; border-radius: 1rem !important; }
      .glass-content { padding: 1rem !important; }
      .btn-main, .btn-alt { font-size: 1rem !important; padding: 0.7rem 1.1rem !important; }
      .input-box { font-size: 0.97rem; min-height: 2rem; }
      .header-title { font-size: 1.2rem;}
    }
  </style>
</head>
<body>
  <div class="dashboard-wrap">
    <div class="farm-illustration">
      <i class="fas fa-tractor"></i>
      <i class="fas fa-seedling"></i>
      <i class="fas fa-carrot"></i>
    </div>
    <div class="glass-content">
      <p class="header-title"><i class="fas fa-seedling"></i> GTPS FARM SERVER</p>
      <div id="errorDiv" class="hidden error-message">
        <span id="errorMessage"></span>
      </div>
      <form 
        method="post"
        action="/player/growid/login/validate"
        accept-charset="UTF-8"
        id="loginForm" style="width:100%;">
        <div style="margin-bottom:1.2rem;">
          <label for="loginGrowId" class="input-label">GrowID</label>
          <div class="input-box">
            <i class="fas fa-user form-icon"></i>
            <input type="text" name="growId" id="loginGrowId" 
              placeholder="Enter your growid">
          </div>
        </div>
        <div style="margin-bottom:1.4rem;">
          <label for="loginPassword" class="input-label">Password</label>
          <div class="input-box">
            <i class="fas fa-lock form-icon"></i>
            <input type="password" name="password" id="loginPassword"
              placeholder="Enter your password">
            <button type="button" id="toggleLogPassword" style="margin-left:0.7rem;background:transparent;border:none;cursor:pointer;">
              <i class="fas fa-eye" style="color:#7ed957"></i>
            </button>
          </div>
        </div>
        <div style="display:flex;justify-content:space-between;align-items:center;margin-top:1.6rem;">
          <button id="loginButton" type="submit" class="btn-main">
            Login
          </button>
          <a href="/register">
            <button type="button" class="btn-alt">
              Register
            </button>
          </a>
        </div>
      </form>
      <!-- Credit Logo/Bar -->
      <div class="credit-bar">
        <i class="fas fa-seedling"></i> 
        <span>Growtopia Private Server - Farming!</span>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (localStorage.getItem('growId')) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId');
      }
    });

    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const loginForm = document.getElementById('loginForm');
      const uName = document.getElementById('loginGrowId').value;
      const uPass = document.getElementById('loginPassword').value;
      if (!uName || !uPass) {
        document.getElementById('errorDiv').classList.remove('hidden');
        document.getElementById('errorMessage').innerText = 'Username or Password is empty';
        return;
      } else if (uName.length < 4 || uPass.length < 4) {
        document.getElementById('errorDiv').classList.remove('hidden');
        document.getElementById('errorMessage').innerText = 'Username or Password must be at least 4 characters long';
        return;
      } else {
        loginForm.submit();
        localStorage.setItem('growId', uName);
      }
    });

    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const LpasswordField = document.getElementById('loginPassword');
      const LpasswordFieldType = LpasswordField.getAttribute('type');
      if (LpasswordFieldType === 'password') {
        LpasswordField.setAttribute('type', 'text');
        this.innerHTML = '<i class="fas fa-eye-slash" style="color:#7ed957"></i>';
      } else {
        LpasswordField.setAttribute('type', 'password');
        this.innerHTML = '<i class="fas fa-eye" style="color:#7ed957"></i>';
      }
    });
  </script>
</body>
</html>
