<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GTPS SERVER</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      background: transparent
      font-family: 'Montserrat', Arial, sans-serif;
      margin: 0;
    }
    .glass {
      position: relative;
      background: rgba(34, 54, 86, 0.88);
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.20);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border-radius: 1.7rem;
      overflow: hidden;
      margin: 0 auto;
      animation: floaty 6s ease-in-out infinite alternate;
    }
    @keyframes floaty {
      0%,100% { box-shadow: 0 8px 32px 0 rgba(31,38,135,0.20);}
      50% { box-shadow: 0 20px 50px 0 rgba(31,38,135,0.27);}
    }

    /* Animated moving border (multi-color LED) */
    .led-border {
      pointer-events: none;
      position: absolute;
      inset: 0;
      z-index: 2;
      border-radius: inherit;
    }
    .led-border::before {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: inherit;
      margin: -7px;
      z-index: 3;
      /* Multi-color gradient border with more stops for "moving" effect */
      background: conic-gradient(
        from var(--angle, 0deg),
        #ff5555, #ffffff 12%, #2196f3 24%, #a855f7 36%, #ffe066 48%, #ff5555 60%, #ffffff 72%, #2196f3 84%, #a855f7 96%, #ffe066 100%
      );
      filter: blur(2.5px) brightness(1.2) drop-shadow(0 0 5px #fff8);
      animation: led-spin 5s linear infinite;
      -webkit-mask: 
        linear-gradient(#fff 0 0) content-box, 
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      pointer-events: none;
    }
    @keyframes led-spin {
      to { --angle: 360deg; }
    }

    .glass-content {
      position: relative;
      z-index: 10;
      border-radius: inherit;
      padding: 2.5rem 2.5rem 1.2rem 2.5rem;
      width: 27rem;
      max-width: 97vw;
      background: transparent;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .input-label {
      color: #e0e6ed;
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.2rem;
      letter-spacing: 0.01em;
      display: block;
    }
    .input-box {
      background: rgba(255,255,255,0.10) !important;
      border: 1.5px solid #31d1ff88 !important;
      border-radius: 0.8rem !important;
      color: #e0e6ed !important;
      font-size: 1.08rem;
      padding-left: 0.85rem;
      padding-right: 0.5rem;
      min-height: 2.5rem;
      transition: border-color 0.2s, box-shadow 0.2s;
      box-shadow: 0 1px 6px 0 rgba(49,209,255,0.04);
    }
    .input-box:focus-within { border-color: #a855f7; box-shadow: 0 0 0 2px #a855f744; }
    .input-box input:focus { outline: none; }
    .input-box::placeholder, .input-box input::placeholder { 
      color: #b3cce7; opacity: 1; font-size: 0.97rem; letter-spacing: .01em;
    }
    .btn-main {
      background: linear-gradient(90deg, #ff5555 0%, #2196f3 100%);
      color: #fff;
      font-weight: bold;
      border-radius: 0.9rem;
      box-shadow: 0 2px 16px #2196f355;
      transition: 0.2s;
      letter-spacing: 0.02em;
      border: none;
      font-size: 1.13rem;
    }
    .btn-main:hover, .btn-main:focus {
      background: linear-gradient(90deg, #ffe066 0%, #a855f7 100%);
      transform: translateY(-2px) scale(1.05);
      box-shadow: 0 4px 24px #ffe06666;
      outline: none;
    }
    .btn-alt {
      background: linear-gradient(90deg, #fff 0%, #2196f3 100%);
      color: #222;
      font-weight: bold;
      border-radius: 0.9rem;
      box-shadow: 0 2px 16px #2196f322;
      transition: 0.2s;
      letter-spacing: 0.02em;
      border: none;
      font-size: 1.13rem;
    }
    .btn-alt:hover, .btn-alt:focus {
      background: linear-gradient(90deg, #a855f7 0%, #ffe066 100%);
      transform: translateY(-2px) scale(1.05);
      outline: none;
      color: #222;
    }
    .form-icon {
      color: #2196f3;
      margin-right: 0.85rem;
      font-size: 1.1rem;
      transition: color 0.2s;
    }
    .input-box:focus-within .form-icon { color: #a855f7; }
    .error-message {
      background: #fff2;
      color: #f87171;
      border-radius: 0.6rem;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      text-align: center;
      margin-bottom: 1.1rem;
      font-weight: bold;
      letter-spacing: 0.01em;
    }
    /* Credit bar */
    .credit-bar {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.6rem;
      margin-top: 1.7rem;
      color: #ffe066;
      font-size: 1.09rem;
      font-family: 'Montserrat', Arial, sans-serif;
      font-weight: 700;
      letter-spacing: 0.03em;
      opacity: 0.90;
      text-shadow: 0 2px 12px #a855f766, 0 0 4px #fff3;
      user-select: none;
    }
    .credit-bar .fa-bolt {
      color: #ff5555;
      background: linear-gradient(135deg,#ff5555 50%, #ffe066 100%);
      border-radius: 50%;
      padding: 0.15em 0.23em;
      font-size: 1.18em;
      box-shadow: 0 0 8px #ffe06699, 0 0 2px #ff5555;
      margin-right: 0.18em;
      animation: bolt-flicker 1s infinite alternate;
    }
    @keyframes bolt-flicker {
      0% { filter: brightness(1.2);}
      100% { filter: brightness(2);}
    }
    @media (max-width: 600px) {
      .glass-content { border-radius: 1.1rem; padding: 1.1rem !important; width: 99vw !important; }
      .btn-main, .btn-alt { font-size: 1rem !important; padding: 0.7rem 1.1rem !important; }
      .input-box { font-size: 0.97rem; min-height: 2rem; }
      .credit-bar { font-size: 1rem;}
    }
  </style>
</head>
<body class="flex flex-col items-center justify-center min-h-screen">
  <div class="fixed inset-0 flex items-center justify-center">
    <div class="glass" style="width:27rem;max-width:97vw;">
      <div class="led-border"></div>
      <div class="glass-content">
        <p class="text-white text-center font-bold text-3xl mb-6 tracking-wide drop-shadow-[0_1.5px_7px_rgba(255,85,85,0.15)]">GTPS SERVER</p>
        <div id="errorDiv" class="hidden error-message">
          <span id="errorMessage"></span>
        </div>
        <form 
          method="post"
          action="/player/growid/login/validate"
          accept-charset="UTF-8"
          id="loginForm" class="mt-3 w-full">
          <div class="mb-6">
            <label for="loginGrowId" class="input-label">GrowID</label>
            <div class="flex items-center input-box mt-1">
              <i class="fas fa-user form-icon"></i>
              <input type="text" name="growId" id="loginGrowId" 
                class="w-full bg-transparent border-none focus:outline-none placeholder-[#b3cce7] text-white"
                placeholder="Enter your growid" style="background-color: transparent;">
            </div>
          </div>
          <div class="mb-8">
            <label for="loginPassword" class="input-label">Password</label>
            <div class="flex items-center input-box mt-1">
              <i class="fas fa-lock form-icon"></i>
              <input type="password" name="password" id="loginPassword"
                class="w-full bg-transparent border-none focus:outline-none placeholder-[#b3cce7] text-white"
                placeholder="Enter your password" style="background-color: transparent;">
              <button type="button" id="toggleLogPassword" class="ml-3 bg-transparent border-none focus:outline-none">
                <i class="fas fa-eye text-[#2196f3]"></i>
              </button>
            </div>
          </div>
          <div class="flex justify-between items-center mt-7">
            <button id="loginButton" type="submit" class="btn-main text-lg px-7 py-2.5">
              Login
            </button>
            <a href="/register">
              <button type="button" class="btn-alt text-lg px-7 py-2.5">
                Register
              </button>
            </a>
          </div>
        </form>
        <!-- Credit Logo/Bar -->
        <div class="credit-bar mt-7">
          <i class="fas fa-bolt"></i> 
          <span>DelvineX</span>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Auto-fill GrowID from localStorage
      if (localStorage.getItem('growId')) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId');
      }
    });

    // Event listener for login button
    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const loginForm = document.getElementById('loginForm');
      const uName = document.getElementById('loginGrowId').value;
      const uPass = document.getElementById('loginPassword').value;
      if (!uName || !uPass) {
        document.getElementById('errorDiv').classList.remove('hidden');
        document.getElementById('errorMessage').innerText = 'Username or Password is empty';
        return;
      } else if (uName.length < 4 || uPass.length < 4) {
        document.getElementById('errorDiv').classList.remove('hidden');
        document.getElementById('errorMessage').innerText = 'Username or Password must be at least 4 characters long';
        return;
      } else {
        loginForm.submit();
        localStorage.setItem('growId', uName); // Save GrowID to localStorage
      }
    });

    // Toggle visibility of the password field
    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const LpasswordField = document.getElementById('loginPassword');
      const LpasswordFieldType = LpasswordField.getAttribute('type');
      if (LpasswordFieldType === 'password') {
        LpasswordField.setAttribute('type', 'text');
        this.innerHTML = '<i class="fas fa-eye-slash text-[#2196f3]"></i>';
      } else {
        LpasswordField.setAttribute('type', 'password');
        this.innerHTML = '<i class="fas fa-eye text-[#2196f3]"></i>';
      }
    });
  </script>
</body>
</html>
