<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GTPS SERVER</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      background: transparent
      font-family: 'Montserrat', Arial, sans-serif;
      margin: 0;
      color: #3b2d06;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .dashboard-wrap {
      position: relative;
      background: #fffdf8;
      border-radius: 1.2rem;
      max-width: 95vw;
      margin: 2rem;
      width: 24rem;
      box-shadow: 0 6px 24px 0 #e0c6493a;
      overflow: hidden;
      padding: 0;
      /* Animated border using pseudo-element */
    }
    .dashboard-wrap::before {
      content: '';
      position: absolute;
      z-index: 1;
      inset: 0;
      border-radius: 1.2rem;
      padding: 3px;
      background: linear-gradient(270deg, #f7c948, #222, #f7c948, #222, #f7c948);
      background-size: 400% 400%;
      animation: borderMove 4s linear infinite;
      -webkit-mask: 
        linear-gradient(#fff 0 0) content-box, 
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      pointer-events: none;
    }
    @keyframes borderMove {
      0% {background-position: 0% 50%;}
      100% {background-position: 100% 50%;}
    }
    .bee-illustration {
      z-index: 2;
      position: relative;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #fffbe6;
      padding-top: 2.5rem;
      padding-bottom: 1rem;
    }
    .bee-emoji {
      font-size: 3.3rem;
      margin: 0 .6rem;
      /* No animation */
    }
    .glass-content {
      z-index: 2;
      position: relative;
      background: #fffdf8;
      border-radius: 1.2rem;
      padding: 1.5rem 1.2rem 1.2rem 1.2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .header-title {
      font-size: 1.6rem;
      font-weight: 800;
      letter-spacing: 0.04em;
      color: #3b2d06;
      margin-bottom: 1.2rem;
      text-align: center;
      display: flex;
      align-items: center;
      gap: 0.7rem;
    }
    .input-label {
      color: #d9a92d;
      font-size: 1rem;
      margin-bottom: 0.2rem;
      display: block;
      font-weight: 600;
    }
    .input-box {
      background: #fffbe6;
      border: 1.5px solid #f7c948;
      border-radius: 0.7rem;
      color: #3b2d06;
      font-size: 1rem;
      padding-left: 0.9rem;
      padding-right: 0.5rem;
      min-height: 2.1rem;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
    }
    .input-box input {
      background: transparent;
      border: none;
      color: #3b2d06;
      width: 100%;
      font-size: 1rem;
      outline: none;
    }
    .input-box input::placeholder {
      color: #c2a84c;
      opacity: 1;
      font-size: .97rem;
    }
    .form-icon {
      color: #f7c948;
      margin-right: 0.6rem;
      font-size: 1.08rem;
    }
    .toggle-password {
      margin-left:0.6rem;
      background:transparent;
      border:none;
      cursor:pointer;
      outline: none;
      display: flex;
      align-items: center;
    }
    .toggle-password i {
      color: #f7c948;
      font-size: 1.08rem;
    }
    .btn-main, .btn-alt {
      background: #f7c948;
      color: #3b2d06;
      border-radius: 0.8rem;
      border: none;
      font-size: 1.08rem;
      font-weight: bold;
      padding: 0.6rem 1.7rem;
      margin-right: 0.5rem;
      margin-top: 0.2rem;
      cursor: pointer;
      letter-spacing: 0.01em;
      box-shadow: 0 2px 10px 0 #f7c94830;
      transition: background 0.2s, color 0.2s;
    }
    .btn-main:hover, .btn-alt:hover {
      background: #fffbe6;
      color: #d9a92d;
      border: 1px solid #f7c948;
    }
    .error-message {
      display: none;
      background: #fff2;
      color: #d90429;
      border-radius: 0.6rem;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      text-align: center;
      margin-bottom: 1.1rem;
      font-weight: bold;
      letter-spacing: 0.01em;
    }
    .error-message.show {
      display: block;
    }
    .credit-bar {
      margin-top: 2rem;
      color: #b89b36;
      font-size: 1rem;
      font-weight: 600;
      opacity: 0.85;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      user-select: none;
    }
    .credit-bar .fa-leaf {
      color: #f7c948;
      font-size: 1.1em;
    }
    @media (max-width: 600px) {
      .dashboard-wrap, .glass-content { width: 99vw !important; border-radius: 1rem !important; }
      .glass-content { padding: 1rem !important; }
      .btn-main, .btn-alt { font-size: 1rem !important; padding: 0.7rem 1.1rem !important; }
      .input-box { font-size: 0.97rem; min-height: 2rem; }
      .header-title { font-size: 1.1rem;}
    }
  </style>
</head>
<body>
  <div class="dashboard-wrap">
    <div class="bee-illustration">
      <span class="bee-emoji">üêù</span>
    </div>
    <div class="glass-content">
      <p class="header-title"><span class="bee-emoji">üêù</span> GTPS BEE SERVER</p>
      <div id="errorDiv" class="error-message">
        <span id="errorMessage"></span>
      </div>
      <form 
        method="post"
        action="/player/growid/login/validate"
        accept-charset="UTF-8"
        id="loginForm" style="width:100%;">
        <div style="margin-bottom:1.2rem;">
          <label for="loginGrowId" class="input-label">GrowID</label>
          <div class="input-box">
            <i class="fas fa-user form-icon"></i>
            <input type="text" name="growId" id="loginGrowId" 
              placeholder="Enter your growid">
          </div>
        </div>
        <div style="margin-bottom:1.4rem;">
          <label for="loginPassword" class="input-label">Password</label>
          <div class="input-box">
            <i class="fas fa-lock form-icon"></i>
            <input type="password" name="password" id="loginPassword"
              placeholder="Enter your password">
            <button type="button" id="toggleLogPassword" class="toggle-password" aria-label="Show/Hide Password">
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>
        <div style="display:flex;justify-content:space-between;align-items:center;margin-top:1.6rem;">
          <button id="loginButton" type="submit" class="btn-main">
            Login
          </button>
          <a href="/register">
            <button type="button" class="btn-alt">
              Register
            </button>
          </a>
        </div>
      </form>
      <div class="credit-bar">
        <i class="fas fa-leaf"></i> 
        <span>Growtopia Private Server - Bee Theme!</span>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (localStorage.getItem('growId')) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId');
      }
    });

    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const loginForm = document.getElementById('loginForm');
      const uName = document.getElementById('loginGrowId').value;
      const uPass = document.getElementById('loginPassword').value;
      const errorDiv = document.getElementById('errorDiv');
      const errorMessage = document.getElementById('errorMessage');
      if (!uName || !uPass) {
        errorDiv.classList.add('show');
        errorMessage.innerText = 'Username or Password is empty';
        return;
      } else if (uName.length < 4 || uPass.length < 4) {
        errorDiv.classList.add('show');
        errorMessage.innerText = 'Username or Password must be at least 4 characters long';
        return;
      } else {
        errorDiv.classList.remove('show');
        loginForm.submit();
        localStorage.setItem('growId', uName);
      }
    });

    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const LpasswordField = document.getElementById('loginPassword');
      const icon = this.querySelector('i');
      if (LpasswordField.getAttribute('type') === 'password') {
        LpasswordField.setAttribute('type', 'text');
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
      } else {
        LpasswordField.setAttribute('type', 'password');
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
      }
    });
  </script>
</body>
</html>
